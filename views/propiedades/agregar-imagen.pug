extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal SENA
        h2.text-center.text-2xl.font-extrabold=tituloPagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-0(method="POST" action="/propiedades/agregar-imagen" enctype="multipart/form-data")
                input(type="hidden" name="_csrf" value=csrfToken )
                .space-y-5 
                    h3.text-lg.leading-6.font-medium.text-gray-900 Imagenes de Referencia
                    p.text-gray-600 AÃ±ade la imagenes de la propiedad en venta
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="imagenes") Agregar Imagenes
                        input#imagenes.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(type="file" name="imagenes" multiple accept="image/*")

                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Subir Imagen")